<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bhasks.studybuddy2" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Timer"
            android:label="@string/title_activity_timer"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhasks.studybuddy2.MainActivity" />
        </activity>

        <activity
            android:name=".Courses"
            android:label="@string/title_activity_courses" >
        </activity>
        <activity
            android:name=".Grades"
            android:label="@string/title_activity_grades" >
        </activity>
        <activity
            android:name=".Assignments"
            android:label="@string/title_activity_assignments" >
        </activity>

        <activity
            android:name=".ClassInformation"
            android:label="@string/title_activity_class_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhasks.studybuddy2.MainActivity" />
        </activity>

    </application>

</manifest>
